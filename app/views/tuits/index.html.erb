<h1>Explorer</h1>
<% @tuits.each do |tuit| %>
    <div>
    <%if tuit.owner.avatar.nil?%>
        <%= link_to tuit_path tuit.id do %>
             <%= image_tag('noavatar.png', :alt => 'tuit.owner.name') %>
        <% end %>
    <% else %>
        <%=tuit.owner.avatar%></div>
    <% end %>
    <div>
        <p> <span><%=tuit.owner.name%></span> @<%=tuit.owner.username%> - <%=tuit.created_at.strftime("%-d %B") %></p>
        <p><%=tuit.body%></p>
        <p># <%=tuit.comments_count%> # <%=tuit.likes_count%></p>
    </div>
<% end %>
